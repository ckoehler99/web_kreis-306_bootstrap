############
### PAGE ###
############
page {
    logo {
        file = EXT:kreis-306_bootstrap/Resources/Public/Images/logo.png
        height = 95
        width = 125
        alt = kreis-306
        linktitle = kreis-306
        page.theme.breadcrumb.enable = 0
    }
    favicon {
        file = EXT:kreis-306_bootstrap/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:kreis-306_bootstrap/Resources/Private/Layouts/Page/
        partialRootPath = EXT:kreis-306_bootstrap/Resources/Private/Partials/Page/
        templateRootPath = EXT:kreis-306_bootstrap/Resources/Private/Templates/Page/
    }
    
    theme {
        navigation.type = top
        breadcrumb.enable = 0
        breadcrumb.enableLevel = 1
        language.enable = 0
        socialmedia.enable = 0
        copyright.enable = 0
        cookieconsent.cookie.expiryDays = 20
